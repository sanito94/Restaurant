@model IEnumerable<CartViewModel>

@{
    var expectedDeliveryDay = DateTime.Now.Day + 3;
    string deliveryDay = expectedDeliveryDay.ToString().PadLeft(2, '0');
    double subtotal = 0;
}

<section class="h-100 gradient-custom">
  <div class="container py-5">
    <div class="row d-flex justify-content-center my-4">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Cart - @Model.Count() items</h5>
          </div>
          <div class="card-body">
           
              @if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <!-- Single item -->
        <div class="row">
            <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                <!-- Image -->
                <div class="bg-image hover-overlay hover-zoom ripple rounded" data-mdb-ripple-color="light">
                    <img src="@item.ImageUrl"
                 class="w-100"/>
                    <a href="#!">
                        <div class="mask" style="background-color: rgba(251, 251, 251, 0.2)"></div>
                    </a>
                </div>
                <!-- Image -->
            </div>

            <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                <!-- Data -->
                <p><strong>@item.ItemName</strong></p>
                <form class="input-group-sm" asp-controller="Cart"
                    asp-action="DeleteItem" asp-route-id="@item.ItemId" method="post">
                <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-sm me-1 mb-2" data-mdb-tooltip-init title="Remove item">
                    <i class="fas fa-trash"></i>
                </button>
                </form>
                <!-- Data -->
            </div>

            <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <!-- Quantity -->
                <div class="d-flex mb-4" style="max-width: 300px">
                    
                    <form class="input-group-sm" asp-controller="Cart"
                    asp-action="MinusAmount" asp-route-id="@item.ItemId" method="post">
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary px-3 me-2"
                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                        <i class="fas fa-minus"></i>
                    </button>
                    </form>


                    <div data-mdb-input-init class="form-outline">
                        <input id="form1" min="0" name="quantity" value="@item.Amount" type="number" class="form-control" />
                        <label class="form-label" for="form1">Quantity</label>
                    </div>

                    <form class="input-group-sm" asp-controller="Cart"
                    asp-action="PlusAmount" asp-route-id="@item.ItemId" method="post">
                    <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary px-3 ms-2"
                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                        <i class="fas fa-plus"></i>
                    </button>
                    </form>
                </div>
                <!-- Quantity -->
                <!-- Price -->
                <p class="text-start text-md-center">
                    <strong>$@item.Price</strong>
                </p>
                <!-- Price -->
            </div>
        </div>
        <!-- Single item -->
        <p></p>

        subtotal += item.Amount * item.Price;
    }
}

            <hr class="my-4" />

           
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <p><strong>Expected shipping delivery</strong></p>
                        <p class="mb-0">@DateTime.Now.Day.ToString().PadLeft(2, '0')/@DateTime.Now.Month.ToString().PadLeft(2, '0')/@DateTime.Now.Year - @deliveryDay/@DateTime.Now.Month.ToString().PadLeft(2, '0')/@DateTime.Now.Year</p>
          </div>
        </div>
        <div class="card mb-4 mb-lg-0">
          <div class="card-body">
            <p><strong>We accept</strong></p>
            <img class="me-2"
              src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/visa.svg" style="width:45px; height:45px"
              alt="Visa" />
            <img class="me-2" 
              src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/amex.svg" style="width:45px; height:45px"
              alt="American Express" />
            <img class="me-2" 
              src="https://mdbcdn.b-cdn.net/wp-content/plugins/woocommerce-gateway-stripe/assets/images/mastercard.svg" style="width:45px; height:45px"
              alt="Mastercard" />
            <img class="me-2"
              src="https://upload.wikimedia.org/wikipedia/commons/a/a4/Paypal_2014_logo.png" style="width:45px; height:45px"
              alt="PayPal acceptance mark" />
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Summary</h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Products
                <span>$@subtotal.ToString("f2")</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                Shipping
                <span>Gratis</span>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                <div>
                  <strong>Total amount</strong>
                  <strong>
                    <p class="mb-0">(including VAT)</p>
                  </strong>
                </div>
                <span><strong>$@subtotal.ToString("f2")</strong></span>
              </li>
            </ul>
                        <form asp-action="CreateCheckoutSession" asp-controller="Cart" method="post">
            <button  type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block">
              Go to checkout
            </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>