@model ShopDetailsServiceModel


<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width: 20rem;"
                 src="@Model.ImageUrl" alt="House Image">
        </div>
        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.Name</u></p>
            <p>Description: <b>@Model.Description</b></p>
            <p>
                Price:
                <b>$@String.Format("{0:f2}", Model.Price)</b>
            </p>
            
            <p></p>
            @if (this.User?.Identity?.IsAuthenticated ?? false)
            {
                <form class="input-group-sm" asp-controller="Cart"
                  asp-action="AddToCart" asp-route-id="@Model.Id" method="post">
                                <input class="btn btn-primary" type="submit" value="AddToCart" />
                            </form>
            }
        </div>
    </div>
</div>
